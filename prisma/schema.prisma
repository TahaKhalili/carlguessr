generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model User {
  id           String   @default(cuid()) @id
  name         String
  email        String
  createdAt    DateTime @default(now()) @map(name: "created_at")
  challenges   Challenge[]
}

model Challenge {
  id         String    @default(cuid()) @id
  title      String
  xLoc1      Int
  yLoc1      Int
  imageUrl1  String
  xLoc2      Int
  yLoc2      Int
  imageUrl2  String
  xLoc3      Int
  yLoc3      Int
  imageUrl3  String
  author     User?     @relation(fields: [authorId], references: [id])
  authorId   String?
}

model GameScore {
   id           String
   player       User
   score        Int
   challengeId  
}
